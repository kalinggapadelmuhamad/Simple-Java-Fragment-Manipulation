<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentB"
    android:background="@android:color/holo_blue_bright">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_fragment_b"
            android:layout_width="146dp"
            android:layout_height="108dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kakatua" />

        <TextView
            android:id="@+id/name_fragment_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_fragment_b"
            android:layout_centerHorizontal="true"
            android:text="Kakatua"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bird_description_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_fragment_b"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="italic"
            android:text="- Cacatuidae -"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>